<h1>Let's edit the card, shall we?</h1>

<form action="<%= list_card_url %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label for="card_title">Card Title:</label>
	<input type="text" name="card[title]" id="card_title" value="<%= @card.title %>">

  <input type="submit" value="Edit card">
</form>