<h1>Let's update a list, shall we?</h1>

<form action="<%= list_card_url(@card.list_id, @card) %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label for="list_title">List Title:</label>
	<input type="text" name="list[title]" id="list_title" value="<%= @list.title %>">

  <input type="submit" value="Update a list">
</form>